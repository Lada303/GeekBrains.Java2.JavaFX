<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="lada303.lesson4.Controller">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>

    <TextArea fx:id="chatText" VBox.vgrow="ALWAYS" editable="false"/>

    <HBox>
        <TextField fx:id="sendText" HBox.hgrow="ALWAYS" onAction="#sendTextToTextArea"/>
        <Button text="Отправить" onAction="#sendTextToTextArea"/>
    </HBox>
</VBox>
